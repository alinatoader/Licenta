@model ELearning.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ELearning</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/clasic-template/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/clasic-template/css/templatemo-style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <form asp-action="Register" style="width: 30%;margin-left: 35%;margin-top: 10%;" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3 class="tm-gold-text tm-title">Bun venit!</h3>
        <div class="form-group row">
            <input type="text" asp-for="FirstName" class="form-control" placeholder="FirstName" required autocomplete="off" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <input type="text" asp-for="LastName" class="form-control" placeholder="LastName" required autocomplete="off" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <input type="email" asp-for="Email" class="form-control" placeholder="Email" required autocomplete="off" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <input type="password" asp-for="Password" class="form-control" placeholder="Parola" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <select asp-for="Rol" asp-items="@Html.GetEnumSelectList<UserType>()" class="form-control" id="user-type-select"></select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>
        <div class="form-group row" id="register-group-select">
            <input list="groups" asp-for="Group" class="form-control" required placeholder="Grupa" />
            <datalist id="groups">
                @foreach (var g in ViewBag.Group)
                {
                    <option value="@g.Text" />
                }
            </datalist>
        </div>
        <h5 class="text-danger">@ViewBag.Message</h5>
        <div class="form-group row">
            <input type="submit" value="Inregistreaza-te" class="tm-btn right-buttons" style="width:40%;" />
        </div>
    </form>
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
    <script src="~/lib/clasic-template/js/jquery-1.11.3.min.js" asp-append-version="true"></script>
    <script src="https://www.atlasestateagents.co.uk/javascript/tether.min.js" asp-append-version="true"></script>
    <script src="~/lib/clasic-template/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/users.js" asp-append-version="true"></script>
</body>
</html>

