@model ELearning.Models.Assignment

@{
    ViewData["Title"] = "Asignare tema";
}

@section Scripts{
    <script type="text/javascript" src="~/js/assignments.js"></script>
}

<div class="row tm-margin-t-big">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
        <div class="tm-2-col-left">
            <h3 class="tm-gold-text tm-title">Asignare tema</h3>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Deadline" class="control-label"></label>
                    <input asp-for="Deadline" class="form-control" type="date" />
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Concept.Name" class="control-label"></label>
                    <input list="concepts" asp-for="Concept.Name" class="form-control" />
                    <datalist id="concepts">
                        @foreach (var d in ViewBag.Concept)
                        {
                            <option value="@d.Text" />
                        }
                    </datalist>
                    <span asp-validation-for="Concept.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Group.Name" class="control-label"></label>
                    <input list="groups" asp-for="Group.Name" class="form-control" />
                    <datalist id="groups">
                        @foreach (var g in ViewBag.Group)
                        {
                            <option value="@g.Text" />
                        }
                    </datalist>
                </div>
                <input asp-for="ProfessorId" value="1" hidden />
                <div class="form-group">
                    <input type="submit" value="Trimite" class="tm-btn" />
                </div>
            </form>
        </div>
    </div>
</div>


