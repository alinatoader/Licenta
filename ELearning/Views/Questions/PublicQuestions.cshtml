@model IEnumerable<ELearning.Models.Question>

@{
    ViewData["Title"] = "PublicQuestions";
}
<section class="resume-section p-3 p-lg-5 d-flex flex-column">
    <div class="my-auto">
        <h2 class="mb-5">Public Questions</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Answers)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => item.Answers[0].Text)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => item.Answers[0].Comment)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var answer in item.Answers)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => answer.Text)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => answer.Comment)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>