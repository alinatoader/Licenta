@model ELearning.Models.Question

@{
    ViewData["Title"] = "Create";
}

@section Scripts{
    <script type="text/javascript" src="~/js/questions.js"></script>
}

<div class="collapse navbar-toggleable-sm">
    <ul class="nav navbar-nav">
        <li class="nav-item active">
            <a asp-controller="Questions" asp-action="Create" class="nav-link">Creeaza intrebare</a>
        </li>
        <li class="nav-item" id="questions-submenu-entry">
            <span class="nav-link">Vezi intrebari</span>
            <div class="questions-submenu">
                <a asp-controller="Questions" asp-action="MyAcceptedQuestions" class="nav-link">Acceptate</a>
                <a asp-controller="Questions" asp-action="MyPendingQuestions" class="nav-link">In asteptare</a>
                <a asp-controller="Questions" asp-action="MyRejectedQuestions" class="nav-link">Respinse</a>
            </div>
        </li>
    </ul>
</div>


<form asp-action="Create" style="margin-top:5rem;" class="create-question-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Status" hidden />
    <input asp-for="StudentId" hidden />
    <input asp-for="Id" hidden />
    <input asp-for="Comment" hidden />
    <input asp-for="Difficulty" hidden />
    <div class="text-info"></div>
    <div class="form-group row">
        @if (Model.AssignmentId > 0)
        {
            <select asp-for="Assignment" asp-items="@ViewBag.Assignment" class="form-control" disabled></select>
        }
        else
        {
            <select asp-for="Assignment" asp-items="@ViewBag.Assignment" class="form-control"></select>
        }
    </div>
    <div class="form-group row">
        <textarea asp-for="Text" class="form-control" placeholder="Intrebare" required></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div id="answers-container">
        <div class="form-group row answer-row">
            <input type="checkbox" />
            <input type="text" class="form-control" placeholder="Raspuns" required />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group row answer-row">
            <input type="checkbox" />
            <input type="text" class="form-control" placeholder="Raspuns" required />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <input type="button" value="+" class="tm-btn" id="add-answer-button" />
    </div>
    <div class="form-group row">
        <input type="submit" value="Salveaza" class="tm-btn right-buttons" />
    </div>
</form>
